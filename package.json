    "cucumber-html-reporter": "^7.2.0",
    "dotenv": "^17.2.3",
    "playwright": "^1.56.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/node": "^24.7.1",
    "allure-commandline": "^2.34.1",
    "allure-cucumberjs": "^3.4.1",
    "cross-env": "^10.1.0"
  }
